{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{{ attach_library('event/event-speakers') }}


{% if content %}
	<div{{attributes}}>
		<div class="speaker-container">
			<div class="speaker-img-box">
				<div class="speaker-img">
					{{content.field_event_speakers_photo}}
				</div>
				<div class="speaker-title">
					{{content.field_event_speakers_name}}
					{{content.field_event_speakers_title}}
					{{content.field_event_speakers_work_area}}
					{{content.field_event_speakers_linkedln}}
				</div>
			</div>
			{{content.field_event_speakers_resume|raw}}
		</div>
	</div>
{% endif %}
